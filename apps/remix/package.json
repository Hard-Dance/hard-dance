{
	"name": "remix",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"setup": "tsx scripts/setupRemix.ts",
		"build": "pnpm run build:remix",
		"build:remix": "remix vite:build",
		"dev": "concurrently \"pnpm run dev:css\" \"pnpm run dev:remix\"",
		"dev:css": "pnpm run sass --watch",
		"dev:remix": "remix vite:dev",
		"sass": "sass app/:app/",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "remix-serve ./build/server/index.js",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@floating-ui/react": "^0.26.19",
		"@googlemaps/markerclusterer": "^2.5.3",
		"@itwin/itwinui-react": "^3.11.3",
		"@remix-run/node": "^2.9.2",
		"@remix-run/react": "^2.9.2",
		"@remix-run/serve": "^2.9.2",
		"@vis.gl/react-google-maps": "^1.1.0",
		"@widgetbot/react-embed": "^1.9.0",
		"classnames": "^2.5.1",
		"cobe": "^0.6.3",
		"date-fns": "^3.6.0",
		"geolib": "^3.3.4",
		"gray-matter": "^4.0.3",
		"isbot": "^4.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^9.0.1",
		"react-merge-refs": "^2.1.1",
		"remix-utils": "^7.6.0",
		"slugify": "^1.6.6",
		"use-resize-observer": "^9.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"@remix-run/dev": "^2.9.2",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"eslint": "^8.38.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"postcss": "^8.4.38",
		"sass": "^1.77.8",
		"typescript": "^5.1.6",
		"vite": "^5.1.0",
		"vite-plugin-static-copy": "^1.0.6",
		"vite-tsconfig-paths": "^4.2.1",
		"tsx": "^4.19.1"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
